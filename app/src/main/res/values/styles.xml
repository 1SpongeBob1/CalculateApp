<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="MainItem">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_marginStart">25dp</item>
        <item name="android:layout_marginEnd">25dp</item>
        <item name="android:layout_marginTop">25dp</item>
    </style>
    <style name="MainItemText">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">1</item>
        <item name="textAllCaps">false</item>
        <item name="android:textSize">16sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:layout_gravity">left|center</item>
    </style>
    <style name="MainItemEdit">
        <item name="android:layout_width">0dp</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:layout_weight">2</item>
        <item name="android:layout_gravity">bottom|center</item>
        <item name="android:layout_marginStart">2dp</item>
        <item name="android:background">@drawable/edit_bg</item>
        <item name="android:textSize">12sp</item>
    </style>

</resources>